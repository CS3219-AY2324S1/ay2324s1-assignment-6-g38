generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Difficulty {
  Easy
  Medium
  Hard
}

enum Category {
  Strings
  Algorithms
  DataStructures
  BitManipulation
  Recursion
  Databases
  Brainteaser
  Arrays
}

model Question {
  id          String     @id @default(uuid()) @map("_id")
  title       String     @unique
  categories  Category[]
  difficulty  Difficulty
  description String
  link        String
}
