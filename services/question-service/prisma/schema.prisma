// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Question {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String   @unique
  category    String[]
  difficulty  String
  description String
  url         String   @unique
}
